      { nombre: "TeorÃ­as y TÃ©cnicas de Grupos", correlativas: ["PsicologÃ­a Social", "PsicoanÃ¡lisis: Freud"] },
      { nombre: "PsicologÃ­a Evolutiva NiÃ±ez", correlativas: ["PsicoanÃ¡lisis: Freud", "PsicologÃ­a y EpistemologÃ­a GenÃ©tica"] },
      { nombre: "PsicologÃ­a Evolutiva Adolescencia", correlativas: ["PsicologÃ­a Evolutiva NiÃ±ez"] },
      { nombre: "PsicopatologÃ­a", correlativas: ["PsicologÃ­a Evolutiva Adolescencia", "NeurofisiologÃ­a"] },
      { nombre: "TTEyDP I", correlativas: ["PsicopatologÃ­a"] },
      { nombre: "TTEyDP II", correlativas: ["PsicopatologÃ­a", "TTEyDP I"] },
      { nombre: "PsicologÃ­a, Ã‰tica y DDHH", correlativas: ["PsicologÃ­a Social", "Historia de la PsicologÃ­a"] },
      { nombre: "PsicologÃ­a Institucional", correlativas: ["Salud PÃºblica y Salud Mental", "TeorÃ­as y TÃ©cnicas de Grupos"] },
      { nombre: "PsicologÃ­a Educacional", correlativas: ["Salud PÃºblica y Salud Mental", "TeorÃ­as y TÃ©cnicas de Grupos", "PsicologÃ­a Evolutiva Adolescencia"] },
      { nombre: "PsicologÃ­a del Trabajo", correlativas: ["Salud PÃºblica y Salud Mental", "TeorÃ­as y TÃ©cnicas de Grupos", "TTEyDP II"] },
      { nombre: "ClÃ­nica de Adultos", correlativas: ["PsicopatologÃ­a", "TTEyDP I", "TTEyDP II"] },
      { nombre: "PsicologÃ­a JurÃ­dica", correlativas: ["PsicopatologÃ­a", "TTEyDP I", "TTEyDP II"] },
      { nombre: "ClÃ­nica PsicopatÃ­as y Emergencias", correlativas: ["PsicopatologÃ­a", "TTEyDP I", "TTEyDP II"] },
      { nombre: "PrÃ¡ctica Profesional e InvestigaciÃ³n", correlativas: ["Salud PÃºblica y Salud Mental"] },
    ];

    const container = document.getElementById("materias");

    function render() {
      container.innerHTML = "";
      const aprobadas = JSON.parse(localStorage.getItem("aprobadas") || "[]");
      materias.forEach((m) => {
        const isAprobada = aprobadas.includes(m.nombre);
        const desbloqueada = m.correlativas.every((c) => aprobadas.includes(c));

        const div = document.createElement("div");
        div.className = "materia";
        if (!desbloqueada && !isAprobada) div.classList.add("locked");
        if (isAprobada) div.classList.add("aprobada");

        div.innerHTML = `<strong>${m.nombre}</strong>`;
        if (m.correlativas.length > 0) {
          div.innerHTML += `<div class='correlativas'>Correlativas: ${m.correlativas.join(", ")}</div>`;
        }

        div.onclick = () => {
          if (!desbloqueada && !isAprobada) return;
          const nuevas = isAprobada
            ? aprobadas.filter((x) => x !== m.nombre)
            : [...aprobadas, m.nombre];
          localStorage.setItem("aprobadas", JSON.stringify(nuevas));
          render();
        };

        container.appendChild(div);
      });
    }

    render();
  </script>
